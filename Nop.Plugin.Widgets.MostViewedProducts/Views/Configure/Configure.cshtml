@using Nop.Plugin.Widgets.MostViewedProducts.Models;
@using Nop.Web.Framework; 
@model MVPSettingsModel

@Html.Action("StoreScopeConfiguration", "Setting", new { area = "Admin" })
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>

    <div class="content">
        <div class="form-horizontal">
            @Html.ValidationSummary(false)
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.OverrideStoreCheckboxFor(model => model.ShowMVPOnHomepage_OverrideForStore, model => model.ShowMVPOnHomepage, Model.ActiveStoreScopeConfiguration)
                                @Html.NopLabelFor(model => model.ShowMVPOnHomepage)
                            </div>
                            <div class="col-md-9">
                                @Html.NopEditorFor(model => model.ShowMVPOnHomepage)
                                @Html.ValidationMessageFor(model => model.ShowMVPOnHomepage)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.OverrideStoreCheckboxFor(model => model.NumberOfMVPOnHomepage_OverrideForStore, model => model.NumberOfMVPOnHomepage, Model.ActiveStoreScopeConfiguration)
                                @Html.NopLabelFor(model => model.NumberOfMVPOnHomepage)
                            </div>
                            <div class="col-md-9">
                                @Html.NopEditorFor(model => model.NumberOfMVPOnHomepage)
                                @Html.ValidationMessageFor(model => model.NumberOfMVPOnHomepage)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}